@section Styles {
    <link rel="stylesheet" href="~/css/user.css" />
}

@model GrantParkCoffeeShop2.Data.Entities.Product

@{
    ViewData["Title"] = Model.Name;
}

<div class="container" style="background: #fff; padding: 10px; margin: 10px 0; border:1px solid lightgray; border-radius:7px;">
    <div class="col-md-4 col-md-offset-1">
        <img src="~/images/@Model.Image" class="img-responsive" style="width: 400px; height: 400px;" />
    </div>
    <div class="col-md-7">
        <h4>@Model.Name</h4>
        <span>Category: @Model.Category.Name</span>
        <hr />
        <h4>@Model.UnitPrice.ToString("c")</h4>
    </div>
</div>

<div class="container" style="background: #fff; padding-top: 5px; padding-bottom: 10px; margin: 10px 0;">
    <h3>Description</h3>
    <div class="col-md-12">
        @Model.Description
    </div>
</div>

<div class="caption" style="text-align: center; font-size: 1.2em; margin-bottom:10px;">
    <a class="btn btn-primary"  href="@Url.Action("cart", "ShoppingCart", new{id= Model.Id})">Add to Cart</a>
</div>
