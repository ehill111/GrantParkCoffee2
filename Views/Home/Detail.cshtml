@section Styles {
    <link rel="stylesheet" href="~/css/user.css" />
}

@model GrantParkCoffeeShop2.Data.Entities.Product

@{
    ViewData["Title"] = Model.Name;
}

<div class="container" style="background: #fff; padding: 10px; margin: 10px 0;">
    <div class="col-md-4 col-md-offset-1">
        <img src="~/images/coffee.jpg" class="img-responsive" style="width: 200px; height: 300px;" />
    </div>
    <div class="col-md-7">
        <h4>@Model.Name</h4>
        <span>Category: @Model.Category.Name</span>
        <hr />
        <h4>N @Model.UnitPrice</h4>
    </div>
</div>

<div class="container" style="background: #fff; padding-top: 5px; padding-bottom: 10px; margin: 10px 0;">
    <h3>Description</h3>
    <div class="col-md-12">
        @Model.Description
    </div>
</div>

<div class="cod-md-12">
    <a href="@Url.Action("cart", "ShoppingCart", new{id= Model.Id})">Add to Cart</a>
</div>
