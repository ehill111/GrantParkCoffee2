@model IEnumerable<GrantParkCoffeeShop2.Data.Entities.Product>
@section Styles {
    <link rel="stylesheet" href="~/css/user.css" />
}
    @{
        ViewData["Title"] = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

<div class="jumbotron bkground-image img-fluid">
    <h1 class="display-4 text-center jumbo-font">Welcome to the World of Fresh and Delicious Food.<br />
    Oh, and since we are a coffee shop...<br />
    Come grab a cup of hot coffee!</h1>
</div>



    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-size carousel-item active">
                <img src="~/baconEggCheese.jpg" alt="Bacon, egg, and cheese croissant" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Bacon, Egg, & Cheese Croissant</h5>
                    <p></p>
                </div>
            </div>
            <div class="carousel-size carousel-item">
                <img src="~/images/chickenSalad.jpg" alt="Chicken salad sandwich" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Chicken Salad Sandwich</h5>
                    <p></p>
                </div>
            </div>
            <div class="carousel-size carousel-item">
                <img src="~/images/bananaNutBread1.jpg" alt="Banana nut bread" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Banana Nut Bread</h5>
                    <p></p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="row" style="margin: 20px 0; background: #fff;">
        @foreach (var product in Model)
        {
            <div class="col-md-3" style="padding: 0; margin: 0;">
                <a href="@Url.Action("Detail", "Home", new{id= product.Id})">
                    <div style="margin:10px; padding:5px; height:220px; border:1px solid darkred; border-radius:7px;">
                        <div class="thumbnail" style="text-align: center; style="padding: 0; margin: 0; border-radius: 0;">
                            <img src="~/images/@product.Image" alt="@product.Name" class="img-responsive cover" style="height: 150px;" />
                            <div class="caption" style="text-align: center; font-size: 1.1em;">
                                <span style="font-weight: bold">@product.Name</span><br />
                                <span>@product.UnitPrice.ToString("c")</span>
                            </div>
                        </div>
                    </div>
                </a>

                <div class="caption" style="text-align: center; font-size: 1.1em; margin-bottom:10px;">
                    <a class="btn btn-primary" href="@Url.Action("cart", "ShoppingCart", new{id= product.Id})">Add to Cart</a>
                </div>
            </div>
        }
    </div>

