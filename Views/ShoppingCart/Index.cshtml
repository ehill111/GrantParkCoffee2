@model IEnumerable<GrantParkCoffeeShop2.Models.ShoppingCart>
@section Styles {
    <link rel="stylesheet" href="~/css/custom.css" />
}


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Order.OrderId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.ProductId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ShoppingCartId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ShoppingCartId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ShoppingCartId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
